<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:id="@+id/footerMiniAlbums"
                                             android:layout_width="100dp"
                                             android:layout_height="140dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivMiniAlbumCover"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvMiniAlbumName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="1"
        android:lines="1"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/ivMiniAlbumCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMiniAlbumSongs"/>

    <TextView
        android:id="@+id/tvMiniAlbumSongs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvMiniAlbumName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>